@page "{id:int}"
@model candidate.Pages_Candidates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Candidate.ID" />
            <div class="form-group">
                <label asp-for="Candidate.Last" class="control-label"></label>
                <input asp-for="Candidate.Last" class="form-control" />
                <span asp-validation-for="Candidate.Last" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.First" class="control-label"></label>
                <input asp-for="Candidate.First" class="form-control" />
                <span asp-validation-for="Candidate.First" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.AnnounceDate" class="control-label"></label>
                <input asp-for="Candidate.AnnounceDate" class="form-control" />
                <span asp-validation-for="Candidate.AnnounceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Party" class="control-label"></label>
                <input asp-for="Candidate.Party" class="form-control" />
                <span asp-validation-for="Candidate.Party" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
